{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [ "ES2021", "DOM", "DOM.Iterable" ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": [ "src/*" ],
      "@pages/*": [ "src/pages/*" ],
      "@components/*": [ "src/components/*" ],
      "@lib/*": [ "src/lib/*" ],
      "@hooks/*": [ "src/hooks/*" ],
      "@services/*": [ "src/services/*" ]
    },
    "types": [ "node" ]
  },
  "include": [ "src", "vite-env.d.ts" ],
  "references": [ { "path": "./tsconfig.node.json" } ]
}

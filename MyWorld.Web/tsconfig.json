{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [ "ES2020", "DOM" ],
    "module": "ESNext",
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "@/*": [ "*" ],
      "@components/*": [ "components/*" ],
      "@pages/*": [ "pages/*" ],
      "@hooks/*": [ "hooks/*" ],
      "@contexts/*": [ "contexts/*" ]
    },
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "references": [ { "path": "./tsconfig.node.json" } ]
}
